{% extends "base.njk" %}

{% block content %}
  <section>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
          <article>
            <div class="article__title text-center">
              <h1 class="h2">{{title}}</h1>
              <span>{{date}}</span>
              <span>
                <a href="#">{{category}}</a>
              </span>
            </div>
            <!--end article title-->
            <div class="article__body">
              <img alt="Image" src="{{featuredImage}}"/>
              {{ content | safe}}
            </div>
            
          </article>
          <!--end item-->
        </div>
      </div>
      <!--end of row-->
    </div>
    <!--end of container-->
  </section>
  <section class="space--sm">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <hr>
        </div>
      </div>
      <!--end of row-->
    </div>
    <!--end of container-->
  </section>

{% endblock %}