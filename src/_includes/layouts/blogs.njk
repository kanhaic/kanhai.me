{% extends "base.njk" %}

{% block content %}
  <section class="space--sm">
    <div class="container">
      <div class="row">
        <div class="col-md-12 col-lg-8">
          <div class="masonry">
            <div class="masonry-filter-container d-flex align-items-center">
              <span>Category:</span>
              <div class="masonry-filter-holder">
                <div class="masonry__filters" data-filter-all-text="All Categories"></div>
              </div>
            </div>
            <hr>
            <div class="masonry__container row">
              <div class="masonry__item col-md-6"></div>
              {% for post in posts %}
                <div class="masonry__item col-md-6" data-masonry-filter="{{post.data.category}}">
                  <article class="feature feature-1">
                    <a href="{{post.url}}" class="block">
                      <img alt="Image" src="{{post.data.featuredImage}}"/>
                    </a>
                    <div class="feature__body boxed boxed--border">
                      <h5>{{post.data.title}}</h5>
                      <a href="{{post.url}}">
                                                    Read More
                                                </a>
                    </div>
                  </article>
                </div>
                <!--end item-->
              {% endfor %}
            </div>
            <!--end of masonry container-->
            <div class="pagination">
              {% if pagination.href.previous %}<a class="pagination__prev" href="{{ pagination.href.previous }}">&laquo;</a>{% endif %}
              <ol>
                {%- for pageEntry in pagination.pages %}
                  <li>
                    <a href="{{ pagination.hrefs[ loop.index0 ] }}"{% if page.url == pagination.hrefs[ loop.index0 ] %} aria-current="page"{% endif %}>{{ loop.index }}</a>
                  </li>
                {%- endfor %}
              </ol>
              {% if pagination.href.next %}
                <a class="pagination__next" href="{{ pagination.href.next }}" title="Next Page">&raquo;</a>
              {% endif %}
            </div>
          </div>
          <!--end masonry-->
        </div>
        <div class="col-lg-4 hidden-sm">
          <div class="sidebar boxed boxed--border boxed--lg bg--secondary">
            <div class="sidebar__widget">
              <h5>Search site</h5>
              <form>
                <input type="text" name="query" placeholder="Type search here"/>
              </form>
            </div>
            <!--end widget-->
            <div class="sidebar__widget">
              <h5>Text Widget</h5>
              <p>
                                        Our new digital products will take your workflow to all-new levels of high productivity. We know you'll find everything you need - and more! Start building with Stack.
